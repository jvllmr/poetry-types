{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":maintainLockFilesMonthly",
    "schedule:weekly",
    ":approveMajorUpdates",
    ":automergeMinor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["python", "poetry"],
      "matchManagers": ["poetry"],
      "enabled": false
    }
  ]
}
